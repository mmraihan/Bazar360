
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-success fw-bold">Role List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>&nbsp; Add New Role</a>
    </div>
</div>


<br />


<div>
    <table class="table table-striped border" id="myTable">
        <thead>
        <tr class="table-success">
            <th>
                Name
            </th>
          
            <th></th>
           
        </tr>
        </thead>
       
        <tbody  class="text-dark">
            @foreach (var item in ViewBag.Roles)
            {
                <tr>
                    <td>@item.Name</td>
                      <td style="width: 15px">
                          <div class="btn-group">
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"> <i class="far fa-edit"></i></a>              
                                <a asp-action="Detail" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-list-ul"></i></a>
                                <a asp-action="Lockout" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> </a>      
                              </div> 
                        </td>
                </tr>
 
            }
        </tbody>


</table>
</div>




@section Scripts{
   
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script> <!-- CDN -->

<script type="text/javascript"> 
 
            
         /*---Alertify--*/
        
        $(function() {

            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }


        })

</script>
}