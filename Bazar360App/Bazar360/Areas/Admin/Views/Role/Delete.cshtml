
@{
    ViewData["Title"] = "Delete";
}

<br/>

<h2 class="text-success fw-bold">Delete Role</h2>

<form class="text-dark" asp-action="Delete" method="post" id="roleForm">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            
        </div>
        <h3 class="text-danger">Do you want to delete this role?</h3>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5 mb-2">
                <input type="hidden" name="id" value="@ViewBag.id"/> @*---Note 18----*@

                <input id="name" name="name" value="@ViewBag.name" readonly class="form-control" required/> @*---Note 17----*@
            </div>
    
        </div>

      
        <br />


        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Delete"/>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@*---------Note 2-------------*@

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}