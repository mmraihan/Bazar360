@model IEnumerable<Bazar360.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-light">Product List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-light"><i class="fas fa-plus"></i>&nbsp; Add New Product</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.ProductColor)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.ProductTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.SpecialTagId)
            </th>
            <th></th>
            <th></th>
        </tr>
        </thead>
       
        <tbody  class="text-light">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.SpecialTag.Name</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>


</table>
</div>

@section Scripts{
   
@*<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>*@ <!-- CDN -->

<script type="text/javascript"> 

        $(function() {

            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }


        })

</script>
}

