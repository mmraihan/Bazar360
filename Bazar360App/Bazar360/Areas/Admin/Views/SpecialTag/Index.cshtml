@model IEnumerable<Bazar360.Models.SpecialTag> //--Note 1--

@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2  class="text-white">Special Tag List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; New Special Tag</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
              @*  ----------------------Partial View--------------*@
                <td>
                    <partial name="_ButtonPartial" model="item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>


   @*  ----------------------Alertify--------------*@
@section Scripts{

    <script type="text/javascript">

        $(function() {

            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }


        })

    </script>
}
