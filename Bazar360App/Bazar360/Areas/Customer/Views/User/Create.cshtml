@model Bazar360.Models.ApplicationUser

@{
    ViewData["Title"] = "Create";
}

<br/>

<h2 class="text-success fw-bold">Create New User</h2>
<form class="text-dark"  method="post" id="userForm">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
            
        </div>
        
      

        

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5 mb-2">
                <input asp-for="UserName" class="form-control" required/>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

       

         <div class="form-group row">
            <div class="col-2">
                <label asp-for="PasswordHash"></label>
            </div>
            <div class="col-5 mb-2">
                <input asp-for="PasswordHash" class="form-control" required/>
            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>


          <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5 mb-2">
                <input asp-for="FirstName" class="form-control"/>
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

         <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5 mb-2">
                <input asp-for="LastName" class="form-control"/>
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <br />


        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save"/>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@*---------Note 2-------------*@

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    </script>

}