@using Bazar360.Models
@model List<Product>

@{
    ViewData["Title"] = "Cart";
}

<h2 class="text-success fw-bold">Your Cart</h2>
<br />

<div class="row">
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Color</th>

            </tr>
        </thead>
        <tbody> @foreach (var item in Model)
        {
            <tr> 
                <td><img width="130px" height="80px" src="@item.ImageUrl"/></td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>@item.ProductColor</td>
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Remove"  asp-route-id="@item.Id" class="btn btn-danger">
                       <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
            
        </tbody>



    </table>

</div>

<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
    </div>
     <div class="col-6 text-end">
         <h4>Total Amount</h4>
         <h4>@Model.Sum(c=>c.Price)</h4>
        <a asp-action="" asp-controller="" class="btn btn-primary">Process to Checkout</a>
    </div>

</div>

